<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/edit_img_ponto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:background="#000"/>

    <Button
        android:id="@+id/escolher_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carregar_foto"
        android:padding="5dp"
        android:textAllCaps="false"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/edit_img_ponto"/>



    <ScrollView
        android:id="@+id/scroll_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/edit_img_ponto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="5dp">


                <EditText
                    android:id="@+id/edit_titulo"
                    android:layout_width="300dp"
                    android:layout_margin="16dp"
                    android:background="@null"
                    android:layout_height="20dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



    <ScrollView
        android:id="@+id/scroll_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_titulo"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/edit_img_ponto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="5dp">

                <EditText
                    android:id="@+id/edit_desc"
                    android:layout_width="300dp"
                    android:layout_margin="16dp"
                    android:layout_height="60dp"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/delete_ponto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/scroll_desc"
        android:layout_toRightOf="@id/edit_img_ponto"
        android:background="#164094"
        android:textColor="#fff"/>


    <Button
        android:id="@+id/edit_ponto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textColor="#fff"
        android:background="#164094"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@id/delete_ponto"
        android:layout_below="@id/scroll_desc"/>


</RelativeLayout>