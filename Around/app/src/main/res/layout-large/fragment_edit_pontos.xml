<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/edit_img_ponto"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:background="#000"/>

    <Button
        android:id="@+id/escolher_foto"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/carregar_foto"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="275dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/edit_img_ponto"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/escolher_camera"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/tirar_foto"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edit_img_ponto"
        app:layout_constraintStart_toEndOf="@id/escolher_foto"
        android:textAllCaps="false"/>



    <ScrollView
        android:id="@+id/scroll_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/escolher_foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="5dp">


                <EditText
                    android:id="@+id/edit_titulo"
                    android:layout_width="600dp"
                    android:layout_margin="16dp"
                    android:background="@null"
                    android:layout_height="45dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



    <ScrollView
        android:id="@+id/scroll_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scroll_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="5dp">

                <EditText
                    android:id="@+id/edit_desc"
                    android:layout_width="600dp"
                    android:layout_margin="16dp"
                    android:layout_height="200dp"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/delete_ponto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        app:layout_constraintTop_toBottomOf="@id/scroll_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#164094"
        android:textColor="#fff"
        android:padding="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/edit_ponto"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/edit_ponto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textColor="#fff"
        android:padding="20dp"
        android:textSize="20sp"
        android:background="#164094"
        app:layout_constraintTop_toBottomOf="@id/scroll_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/delete_ponto"/>


</androidx.constraintlayout.widget.ConstraintLayout>